<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thomas.pleinbioscoop.FilmActivity"
    android:background="@drawable/gradient" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:text=""
        android:id="@+id/trailer_url"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/movietitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        style="@style/movietitle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/movieinfo"
        android:layout_below="@+id/movietitle"
        android:layout_centerHorizontal="true"
        style="@style/movieinfo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/movieplot"
        android:layout_below="@+id/movieinfo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/movieplot"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/trailerbutton"
        android:clickable="true"
        android:onClick="onTrailerClick"
        android:adjustViewBounds="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

</RelativeLayout>
